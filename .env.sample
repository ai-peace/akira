# Database
DATABASE_URL=postgresql://postgres:prisma@localhost:5432/agent-rare?schema=public

# Application
NEXT_PUBLIC_APP_URL=https://jp-rare-items-production.up.railway.app
NEXT_PUBLIC_API_URL=https://jp-rare-items-production.up.railway.app

# Privy Authentication
NEXT_PUBLIC_PRIVY_APP_ID=your-privy-app-id
PRIVY_APP_SECRET=your-privy-app-secret

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Gemini (Optional)
GEMINI_API_KEY=your-gemini-api-key

# Usage Limits
NEXT_PUBLIC_DAILY_PROMPT_USAGE_LIMIT_PER_USER=50
NEXT_PUBLIC_DAILY_PROMPT_USAGE_LIMIT_ALL_USERS=10000

# Logging
ENABLE_LLM_COST_LOGGING=false